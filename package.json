{
    "name": "@codemonster-ru/ssr",
    "version": "1.0.4",
    "description": "Universal SSR engine and CLI with Vite integration for modern JavaScript frameworks.",
    "license": "MIT",
    "author": {
        "name": "Kirill Kolesnikov",
        "email": "admin@codemonster.ru",
        "url": "https://github.com/KolesnikovKirill"
    },
    "type": "module",
    "bin": {
        "ssr": "dist/bin/cli.js"
    },
    "files": [
        "dist/",
        "bin/",
        "CHANGELOG.md",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "dev": "cross-env DEV_ROOT=./playgrounds/vue DEV_ENTRY_SERVER=./src/entry-server.ts tsx src/server.ts",
        "build": "tsc",
        "build:playground": "npm run build --prefix playgrounds/vue",
        "pretest:unit": "npm run build:playground",
        "pretest:e2e": "npm run build:playground",
        "test": "vitest run",
        "test:ci": "npm run build:playground && vitest run",
        "test:unit": "vitest run tests/unit",
        "test:e2e": "vitest run tests/e2e",
        "start": "node ./dist/bin/cli.js server",
        "release:patch": "npm version patch && git push --follow-tags",
        "release:minor": "npm version minor && git push --follow-tags",
        "release:major": "npm version major && git push --follow-tags"
    },
    "dependencies": {
        "@codemonster-ru/env": "^1.1.0",
        "express": "^4.18.2",
        "yargs": "^18.0.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.12.7",
        "@types/yargs": "^17.0.33",
        "cross-env": "^10.0.0",
        "ts-node": "^10.9.2",
        "tsx": "^4.20.5",
        "typescript": "^5.6.3",
        "vitest": "^1.0.0",
        "execa": "^8.0.0",
        "node-fetch": "^3.3.2"
    },
    "peerDependencies": {
        "vite": ">=5.0.0 <8.0.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/codemonster-ru/ssr.git"
    },
    "bugs": {
        "url": "https://github.com/codemonster-ru/ssr/issues"
    },
    "homepage": "https://github.com/codemonster-ru/ssr#readme",
    "keywords": [
        "ssr",
        "server-side-rendering",
        "vite",
        "express",
        "cli",
        "universal",
        "nodejs",
        "javascript",
        "typescript",
        "vue",
        "react"
    ]
}
