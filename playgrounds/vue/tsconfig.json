{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "."
    },
    "include": ["./src", "env.d.ts"],
    "exclude": ["./node_modules", "./dist"]
}
